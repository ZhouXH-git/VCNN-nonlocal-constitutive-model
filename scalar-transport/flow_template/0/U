FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0.721039 0.0 0.0); // See system/fvOptions: Ubar

boundaryField
{
    "(bottomWall|topWall)"
    {
        type            fixedValue;
        value           uniform (0.0 0.0 0.0);
    }
    "(inlet|outlet)"
    {
        type            cyclic;
    }
    defaultFaces
    {
        type            empty;
    }
}


